{
  "expo": {
    "name": "HearMeOutCake",
    "slug": "HearMeOutCake",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "hearmeoutcake",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#58CC02"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourbr0ther.hearmeoutcake",
      "infoPlist": {
        "NSCameraUsageDescription": "HearMeOutCake needs camera access to take photos for your flags.",
        "NSPhotoLibraryUsageDescription": "HearMeOutCake needs photo library access to select images for your flags."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#58CC02"
      },
      "package": "com.yourbr0ther.hearmeoutcake",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow HearMeOutCake to access your camera to take photos for flags."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow HearMeOutCake to access your photos to select images for flags."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
